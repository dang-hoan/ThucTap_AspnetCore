@model CompanyViewModel

@{
    ViewData["Title"] = "Company";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company category</h2>
        </div>
    </div>
    <br />

    <form method="post" class="mb-3" asp-action="Index">
        <div class="d-flex mb-2">
            <div class="block-size me-4">
                <label asp-for="Id" class="control-label">Company code:</label>
                <input asp-for="Id" class="form-control me-sm-2 w-20" placeholder="Company code (0)">
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="block-size me-4">
                <label asp-for="Name" class="control-label">Name:</label>
                <input asp-for="Name" class="form-control me-sm-2 w-20" placeholder="Company name (Balo)">
            </div>
            <div class="block-size me-4">
                <label asp-for="Address" class="control-label">Address:</label>
                <input asp-for="Address" class="form-control me-sm-2 w-20" placeholder="Address (123 Xo Viet Nghe Tinh)">
            </div>
            <div class="block-size">
                <label asp-for="PhoneNumber" class="control-label">Phone number:</label>
                <input asp-for="PhoneNumber" class="form-control me-sm-2 w-20" placeholder="Phone number (0852556258)">
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Search</button>
    </form>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Company code
                </th>
                <th>
                    Company name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Phone number
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Companys)
            {
                <tr>
                    <td width="15%">
                        @obj.Id
                    </td>
                    <td width="30%">
                        @obj.Name
                    </td>
                    <td width="20%">
                        @obj.Address
                    </td>
                    <td width="35%">
                        @obj.PhoneNumber
                    </td>
                    <td>
                        <div class="w-80 btn-group" role="group">
                            <a asp-controller="Company" asp-action="Edit" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"><i class="bi bi-trash3"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp; Create New Company
        </a>
    </div>

</div>

